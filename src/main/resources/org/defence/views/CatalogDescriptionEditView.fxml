<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<GridPane minHeight="650.0" minWidth="900.0" prefHeight="650.0" prefWidth="900.0" stylesheets="/css/Button.css"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.defence.views.CatalogDescriptionEditView">
    <children>
        <StackPane style="-fx-background-color: #4A6C9B" GridPane.columnIndex="0" GridPane.columnSpan="2"
                   GridPane.rowIndex="0">
            <children>
                <Label stylesheets="/css/LabelProperty.css" text="Добавление КО">
                </Label>
            </children>
        </StackPane>
        <Label text="Номер" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="codeTextField" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                   GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </TextField>
        <Label text="Наименование:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="nameTextField" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                   GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </TextField>
        <TabPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <tabs>
                <Tab text="Значения характеристик">
                    <content>
                        <GridPane>
                            <children>
                                <TableView fx:id="valuesTableView">
                                    <columns>
                                        <TableColumn fx:id="characteristicCodeTableColumn" maxWidth="1.7976931348623157E308" minWidth="100.0"
                                                     prefWidth="100.0" text="Код"/>
                                        <TableColumn fx:id="characteristicTableColumn" maxWidth="1.7976931348623157E308"
                                                     minWidth="150.0" prefWidth="430.0" text="Характеристика"/>
                                        <TableColumn fx:id="valueTableColumn" maxWidth="1.7976931348623157E308"
                                                     minWidth="100.0" prefWidth="150.0" text="Значение"/>
                                        <TableColumn fx:id="measurementTableColumn" maxWidth="1.7976931348623157E308"
                                                     minWidth="100.0" prefWidth="200.0" text="Единица измерения"/>
                                    </columns>
                                </TableView>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Загрузка изображения">
                    <content>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS"/>
                                <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="NEVER"/>
                            </rowConstraints>
                            <children>
                                <ImageView fitHeight="370.0" fitWidth="370.0" pickOnBounds="true" preserveRatio="true"
                                           GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0" top="10.0"/>
                                    </GridPane.margin>
                                    <!--<image>
                                        <Image url=""/>
                                    </image>-->
                                </ImageView>
                                <Button alignment="CENTER" mnemonicParsing="false" style="-fx-pref-width: 370px"
                                        text="Загрузить изображение" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0"/>
                                    </GridPane.margin>
                                </Button>
                            </children>
                        </GridPane>
                    </content>
                </Tab>
            </tabs>
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </TabPane>
        <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#saveButtonClicked" text="Принять"
                        AnchorPane.bottomAnchor="15" AnchorPane.rightAnchor="150"/>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#cancelButtonClicked" text="Отмена"
                        AnchorPane.bottomAnchor="15" AnchorPane.rightAnchor="15"/>
            </children>
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </AnchorPane>
    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
</GridPane>
