<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.defence.controllers.NewMeasurementTypeController">
    <children>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  stylesheets="/css/Button.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8"
                  xmlns:fx="http://javafx.com/fxml/1" gridLinesVisible="true">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" maxHeight="50" vgrow="ALWAYS"/>
                <RowConstraints minHeight="300.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="50.0" maxHeight="50" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <StackPane style="-fx-background-color: #4A6C9B" GridPane.rowIndex="0" GridPane.halignment="CENTER"
                           GridPane.valignment="TOP">
                    <children>
                        <Label text="Добавление нового типа единицы измерения" textFill="white"
                               GridPane.halignment="CENTER">
                            <font>
                                <Font name="Cambria" size="18.0"/>
                            </font>
                            <StackPane.margin>
                                <Insets left="50" right="50"/>
                            </StackPane.margin>
                        </Label>
                    </children>
                </StackPane>
                <GridPane GridPane.rowIndex="1" style="-fx-vgap: 10; -fx-hgap: 20; -fx-padding: 20">
                    <children>
                        <Text GridPane.columnIndex="0" GridPane.rowIndex="0" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Код:"/>
                        <TextField fx:id="codeTextField" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        </TextField>
                        <Text GridPane.columnIndex="0" GridPane.rowIndex="1" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Наименование:">
                        </Text>
                        <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
                <StackPane GridPane.rowIndex="2" style="-fx-pref-height: 200pt" alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="messageLabel" textFill="brown" />
                    </children>
                </StackPane>
                <AnchorPane GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="okBtn" mnemonicParsing="false" prefWidth="120.0" text="Принять"
                                AnchorPane.rightAnchor="150"
                                AnchorPane.bottomAnchor="15"/>
                        <Button fx:id="cancelBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Отмена"
                                AnchorPane.rightAnchor="15" AnchorPane.bottomAnchor="15"/>
                    </children>
                </AnchorPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
