<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <StackPane style="-fx-background-color: #4A6C9B" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <children>
                <Label text="Импортирование внешних данных" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </StackPane>


        <!--панель для вывода пути к файлу-->
        <GridPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
            <children>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                    </GridPane.margin>
                </TextField>
                <Button maxHeight="30.0" maxWidth="120.0" minHeight="30.0" minWidth="120.0" prefHeight="30.0" prefWidth="120.0" text="Обзор" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </Button>
            </children>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="300.0" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
            </rowConstraints>
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </GridPane>


        <!--                Панель для выбора импортируемых типов данных-->

        <StackPane style="-fx-background-color: #4A6C9B" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
            <children>
                <Label text="Типы импортируемых данных" textFill="WHITE">
                    <font>
                        <Font name="Candara" size="18.0" />
                    </font>
                </Label>
            </children>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </StackPane>

        <GridPane GridPane.columnSpan="2" GridPane.rowIndex="3">
            <children>
                <RadioButton text="Единица измерения" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <toggleGroup>
                        <ToggleGroup fx:id="ImportGroup" />
                    </toggleGroup>
                    <GridPane.margin>
                        <Insets left="10.0" />
                    </GridPane.margin>
                </RadioButton>
                <RadioButton text="Характеристики" toggleGroup="$ImportGroup" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0" />
                    </GridPane.margin>
                </RadioButton>
                <RadioButton text="Каталожные описания" toggleGroup="$ImportGroup" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="10.0" />
                    </GridPane.margin>
                </RadioButton>
            </children>
            <columnConstraints>
                <ColumnConstraints maxWidth="300.0" minWidth="300.0" />
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
                <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
                <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
            </rowConstraints>
        </GridPane>
        <StackPane style="-fx-background-color: #4A6C9B" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <Label text="Исправлять конфликты репликации" textFill="WHITE">
                    <font>
                        <Font name="Candara" size="18.0" />
                    </font>
                </Label>
            </children>
        </StackPane>

        <!--
                Поле настройки для "Единицы измерения"
        -->

        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <CheckBox text="На уровне групп" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </CheckBox>
                <CheckBox text="На уровне сокращенных наименований" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin>
                </CheckBox>
            </children>
            <columnConstraints>
                <ColumnConstraints maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                <ColumnConstraints minWidth="280.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
            <GridPane.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
        </GridPane>

        <Button maxHeight="30.0" maxWidth="120.0" minHeight="30.0" minWidth="120.0" prefHeight="30.0" prefWidth="120.0" text="Импортировать" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets right="140.0" />
         </GridPane.margin></Button>



    </children>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER" />
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" valignment="CENTER" vgrow="NEVER" />
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" valignment="BOTTOM" vgrow="ALWAYS" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="40.0" prefHeight="40.0" vgrow="ALWAYS" />
    </rowConstraints>
</GridPane>
