<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="CharacteristicValue" table="CHARACTERISTIC_VALUE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="value" column="VALUE" type="string" lazy="false"/>

        <many-to-one name="characteristic" column="CHARACTERISTIC_ID" class="Characteristic" fetch="select" not-null="true"
                     lazy="false" cascade="save-update,merge"/>
    </class>
</hibernate-mapping>