<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="DescriptionFormat" table="DESCRIPTION_FORMAT">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="name" column="NAME" type="string"/>
        <property name="code" column="CODE" type="string"/>

        <set name="characteristicKits" table="CHARACTERISTIC_KIT"
             inverse="false" lazy="true" fetch="select" cascade="all">
            <key column="DESCRIPTION_FORMAT_ID" />
            <one-to-many class="CharacteristicKit" />
        </set>

        <set name="catalogDescriptions" table="CATALOG_DESCRIPTIONS"
             inverse="false" lazy="true" fetch="select" cascade="all">
            <key column="DESCRIPTION_FORMAT_ID" />
            <one-to-many class="CatalogDescription" />
        </set>
    </class>
</hibernate-mapping>