<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="DescriptionFormat" table="DESCRIPTION_FORMAT">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="code" column="CODE" type="string"/>
        <property name="name" column="NAME" type="string"/>

        <list name="characteristics" table="FORMAT_N_CHARACTERISTIC"
             inverse="false" lazy="false" fetch="select" cascade="all-delete-orphan">
            <key column="DESCRIPTION_FORMAT_ID" />
            <list-index column="idx"/>
            <many-to-many column="CHARACTERISTIC_ID" class="Characteristic" />
        </list>

        <list name="assertedNames" table="ASSERTED_NAME"
             inverse="false" lazy="false" fetch="select" cascade="all">
            <key column="DESCRIPTION_FORMAT_ID" />
            <list-index column="idx"/>
            <one-to-many class="AssertedName" />
        </list>
    </class>
</hibernate-mapping>