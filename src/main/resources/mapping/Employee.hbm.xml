<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities.tests">
    <class name="Employee" table="EMPLOYEE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="fio" column="FIO" type="string"/>

        <set name="certificateSet" table="CERTIFICATE_N_EMPLOYEE"
             inverse="false" lazy="true" fetch="select" cascade="all">
            <key column="EMPLOYEE_ID" />
            <many-to-many column="CERTIFICATE_ID" class="Certificate" />
        </set>
    </class>
</hibernate-mapping>