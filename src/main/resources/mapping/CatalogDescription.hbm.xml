<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="CatalogDescription" table="CATALOG_DESCRIPTION">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="code" column="CODE" type="string"/>
        <property name="name" column="NAME" type="string"/>

        <many-to-one name="registrationInfo" column="REGISTRATION_INFO" class="RegistrationInfo"
                     not-null="true" lazy="false" cascade="save-update"/>

        <many-to-one name="organization" column="ORGANIZATION" class="Organization" not-null="true"
                     lazy="false" cascade="save-update"/>

        <list name="values" table="CHARACTERISTICS_VALUE" fetch="select" lazy="false" cascade="all" inverse="false">
            <key column="CATALOG_DESCRIPTION_ID"/>
            <list-index column="idx"/>
            <one-to-many class="org.defence.domain.entities.CharacteristicValue"/>
        </list>
    </class>
</hibernate-mapping>