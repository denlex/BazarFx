<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="Measurement" table="MEASUREMENT">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="code" column="CODE" type="string"/>
        <property name="name" column="NAME" type="string"/>
        <property name="shortName" column="SHORT_NAME" type="string"/>

        <set name="characteristics" table="CHARACTERISTIC"
             inverse="false" lazy="true" fetch="select" cascade="all">
            <key column="MEASUREMENT_ID" />
            <one-to-many class="Characteristic" />
        </set>
    </class>
</hibernate-mapping>