<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="Characteristic" table="CHARACTERISTIC">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="code" column="CODE" type="string"/>
        <property name="name" column="NAME" type="string"/>

        <list name="measurements" table="CHARACTERISTIC_N_MEASUREMENT"
             inverse="false" lazy="false" fetch="select" cascade="all">
            <key column="CHARACTERISTIC_ID"/>
            <list-index column="idx"/>
            <many-to-many column="MEASUREMENT_ID" class="Measurement"/>
        </list>
    </class>
</hibernate-mapping>