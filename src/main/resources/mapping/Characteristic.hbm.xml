<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="Characteristic" table="CHARACTERISTIC">
        <id name="id" column="Id">
            <generator class="native"/>
        </id>

        <property name="code" column="CODE" type="string"/>
        <property name="name" column="NAME" type="string"/>

        <property name="measurement" column="MEASUREMENT" type="Measurement"></property>


        <set name="characteristicKitSet" table="CHARACTERISTIC_KIT"
             inverse="false" lazy="true" fetch="select" cascade="all">
            <key column="CHARACTERISTIC_ID" />
            <many-to-many column="CHARACTERISTIC_KIT_ID" class="CharacteristicKit" />
        </set>
    </class>
</hibernate-mapping>