<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.defence.domain.entities">
    <class name="CharacteristicKit" table="CHARACTERISTIC_KIT">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>

        <property name="name" column="NAME" type="string"/>

        <list name="characteristics" table="CHARACTERISTIC_KIT_N_CHARACTERISTIC"
             inverse="false" lazy="false" fetch="select" cascade="all">
            <key column="CHARACTERISTIC_KIT_ID" />
            <list-index column="idx"/>
            <many-to-many column="CHARACTERISTIC_ID" class="Characteristic" />
        </list>
    </class>
</hibernate-mapping>